@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ProductCompareDotNet.Models.ApplicationUser

@using System.Security.Claims
<div class="centerProfile">
    <div class="col-lg-6 col-sm-6">
        <div class="card hovercard">
            <div class="card-background">
                <img class="card-bkimg" alt="" src="http://vignette4.wikia.nocookie.net/skylanders/images/b/b8/Lob_Goblin.png/revision/latest?cb=20150103194221">
            </div>
            <div class="useravatar">
                <img alt="" src="http://vignette4.wikia.nocookie.net/skylanders/images/b/b8/Lob_Goblin.png/revision/latest?cb=20150103194221">
            </div>
            <div class="card-info">
                <span class="card-title">@User.GetUserName()</span>

            </div>
        </div>
        <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
            <div class="btn-group" role="group">
                <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab">
                    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                    <div class="hidden-xs">Favorite Products</div>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                    <div class="hidden-xs">Reviews</div>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    <div class="hidden-xs">Questions</div>
                </button>
            </div>
           
        </div>

        <div class="well">
            <div class="tab-content">
                <div class="tab-pane fade in active" id="tab1">
                   <h3>Your Favorite Products</h3>

                </div>
                <div class="tab-pane fade in" id="tab2">
                    <h3>Your Reviews</h3>
                    @foreach (var review in ViewBag.Reviews)
                    {
                        <li> @review.ReviewText</li>
                        <hr />

                    }
                </div>
                <div class="tab-pane fade in" id="tab3">
                    <h3>Your Questions</h3>

                    @foreach (var question in ViewBag.Questions)
                    {
                        <li> @question.QuestionText</li>
                        <hr />

                    }
                </div>
             
            </div>
        </div>

    </div>

</div>
